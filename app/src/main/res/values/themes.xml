<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QueComemos" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_ligth</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds color -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSurface">@color/black_ligth</item>
        <item name="colorOnSurface">@color/red_ligth</item>

        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>

        <!-- Font styles -->

        <item name="fontFamily">@font/biryani</item>
        <item name="android:fontFamily">@font/biryani</item>
        <item name="android:letterSpacing">0.05</item>


        <!-- Buttons -->
        <item name="materialButtonStyle">@style/QueComemos.Button</item>

        <!-- BottonNavigation -->
        <item name="bottomNavigationStyle">@style/QueComemos.BottomNavigation</item>
    </style>
</resources>