<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="QueComemos.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textAppearance">@style/QueComemos.Text.Button</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="QueComemos.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textColor">@color/red</item>
        <item name="background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAppearance">@style/QueComemos.Text.Button</item>
    </style>

    <style name="QueComemos.Text.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_md</item>
        <item name="android:letterSpacing">@dimen/letterSpacing</item>
    </style>

    <style name="QueComemos.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/black_dark</item>
        <item name="itemTextAppearanceActive">@style/QueComemos.BottomNavigation.Text.Active</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="QueComemos.BottomNavigation.Text.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/red</item>
    </style>
</resources>